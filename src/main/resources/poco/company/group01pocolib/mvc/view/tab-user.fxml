<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<Tab text="Users" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:id="userTab"
    fx:controller="poco.company.group01pocolib.mvc.controller.UserTabController">
    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" spacing="10.0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>
        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@poco-logo.png"/>
        </ImageView>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <TextField alignment="CENTER" prefHeight="26.0" prefWidth="381.0"
                       promptText="OmniSearch users" fx:id="userSearchField"/>
        </HBox>
        <TableView fx:id="userTable">
            <columns>
                <TableColumn prefWidth="170.0" text="ID" fx:id="userIdColumn"/>
                <TableColumn minWidth="0.0" prefWidth="291.0" text="Name" fx:id="userNameColumn"/>
                <TableColumn prefWidth="341.0" text="Surname" fx:id="userSurnameColumn"/>
                <TableColumn prefWidth="213.0" text="Email" fx:id="userEmailColumn"/>
                <TableColumn prefWidth="204.0" text="Lent" fx:id="userLentColumn"/>
            </columns>
        </TableView>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                <padding>
                    <Insets top="10.0"/>
                </padding>
                <Button mnemonicParsing="false" text="Add" fx:id="userAddButton"
                        onAction="#handleUserAdd"/>
                <Button mnemonicParsing="false" text="View &amp; Edit" fx:id="userViewEditButton"
                        onAction="#handleUserViewEdit"/>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0"
                  GridPane.columnIndex="1">
                <padding>
                    <Insets top="10.0"/>
                </padding>
                <Button mnemonicParsing="false" text="Lend to" fx:id="userLendButton"
                        onAction="#handleUserLend"/>
            </HBox>
        </GridPane>
    </VBox>
</Tab>
