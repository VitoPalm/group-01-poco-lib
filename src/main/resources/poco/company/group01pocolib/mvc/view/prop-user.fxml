<Pane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poco.company.group01pocolib.mvc.controller.UserPropController">
    <VBox fx:id="viewBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" visible="false">

              <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

              <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

                  <Label text="ID">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <Label text="Name" GridPane.rowIndex="1">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <Label text="Surname" GridPane.rowIndex="2">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <Label text="Email" GridPane.rowIndex="3">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <Label text="Borrowed" GridPane.rowIndex="4">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>

                  <Label fx:id="idLabel" text="..." GridPane.columnIndex="1" />
            <Label fx:id="nameLabel" text="..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="surnameLabel" text="..." GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="emailLabel" text="..." GridPane.columnIndex="1" GridPane.rowIndex="3" />

                  <Hyperlink fx:id="borrowedLink" onAction="#handleViewHistory" text="..." GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </GridPane>

              <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="editButton" onAction="#handleEdit" text="Edit" />
         <Label>
            <tooltip>
                    <Tooltip fx:id="deleteButtonTooltip" />
            </tooltip>
            <graphic>
                  <Button fx:id="deleteButton" onAction="#handleDelete" text="Delete" textFill="#e00000" />
            </graphic>
         </Label>
            <Button fx:id="lendToButton" onAction="#handleLendTo" text="Lend to" />
        </HBox>
    </VBox>
    <VBox fx:id="editBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <Label text="ID">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <Label text="Name" GridPane.rowIndex="1">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <Label text="Surname" GridPane.rowIndex="2">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <Label text="Email" GridPane.rowIndex="3">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <TextField fx:id="idField" GridPane.columnIndex="1" />
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="surnameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="emailField" promptText="example@email.aaa" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        </GridPane>
        <Label fx:id="infoLabel" managed="false" text="Saved!" textFill="#474747" visible="false" />
      <Label textFill="#e00000" visible="false" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
         <Label>
            <tooltip>
               <Tooltip fx:id="saveButtonTooltip" />
            </tooltip>
            <graphic>
                  <Button fx:id="saveButton" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#handleSave" text="Save" />
            </graphic>
         </Label>
        </HBox>
    </VBox>

</Pane>
