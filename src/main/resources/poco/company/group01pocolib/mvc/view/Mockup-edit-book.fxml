<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poco.company.group01pocolib.mvc.controller.BookEditController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="ISBN">
            <font><Font name="System Bold" size="13.0" /></font>
        </Label>
        <Label text="Title" GridPane.rowIndex="1">
            <font><Font name="System Bold" size="13.0" /></font>
        </Label>
        <Label text="Authors" GridPane.rowIndex="2">
            <font><Font name="System Bold" size="13.0" /></font>
        </Label>
        <Label text="Year" GridPane.rowIndex="3">
            <font><Font name="System Bold" size="13.0" /></font>
        </Label>
        <Label text="Available copies" GridPane.rowIndex="4">
            <font><Font name="System Bold" size="13.0" /></font>
        </Label>

        <TextField fx:id="isbnField" promptText="978-..." GridPane.columnIndex="1" />
        <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="authorsField" promptText="Author 1; Author 2" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <Button fx:id="minusButton" maxHeight="26.0" maxWidth="26.0" minHeight="26.0" minWidth="26.0" mnemonicParsing="false" onAction="#handleDecrement" prefHeight="26.0" prefWidth="26.0" text="-" />

            <TextField fx:id="copiesField" prefWidth="40.0" text="0" />

            <Button fx:id="plusButton" maxHeight="26.0" maxWidth="26.0" minHeight="26.0" minWidth="26.0" mnemonicParsing="false" onAction="#handleIncrement" prefHeight="26.0" prefWidth="26.0" text="+" />
        </HBox>
    </GridPane>

    <Label fx:id="errorLabel" text="ISBN seems to be invalid" textFill="#e00000" visible="false" />

    <HBox alignment="CENTER" spacing="10.0">
        <Button cancelButton="true" onAction="#handleCancel" text="Cancel" />
        <Button fx:id="saveButton" defaultButton="true" onAction="#handleSave" text="Save" />
    </HBox>
</VBox>
